<input
  class="input input-imdbid"
  type="text"
  name="imdbID"
  value="<%= movie.imdbID %>"
  placeholder="IMDb ID (e.g. tt0499549)"
  required="true"
/>
<input
  class="input input-rating"
  type="number"
  name="rating"
  value="<%= movie.rating %>"
  min="0"
  max="100"
  placeholder="Rating (0-100)"
  required="true"
/>
<textarea
  class="input input-review"
  type="text"
  name="review"
  placeholder="Review (e.g. Great movie.)"
>
<%= movie.review %></textarea
>
